<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="100dp"
            android:id="@+id/editnombreAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre"
            tools:ignore="MissingConstraints"></EditText>

        <EditText
            android:id="@+id/editcursoAsignatura"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:hint="curso"
            tools:ignore="MissingConstraints">

        </EditText>

        <EditText
            android:id="@+id/editdescripcionAsignatura"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:hint="Descripcion"
            tools:ignore="MissingConstraints">

        </EditText>
        <EditText
            android:id="@+id/editfotoAsignatura"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:hint="Imagen"
            tools:ignore="MissingConstraints">

        </EditText>


        <Button
            android:background="#92CF81"

            android:layout_marginTop="60dp"
            android:text="Editar Asignatura"
            android:id="@+id/btneditar"
            android:layout_width="match_parent"
            android:layout_height="100dp"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>